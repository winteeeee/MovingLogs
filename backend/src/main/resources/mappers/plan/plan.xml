<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.enjoytrip.features.plan.adapter.out.persistence.mybatis.dao.PlanDao">
    <select id="findByUid">
        SELECT *
        FROM plan
        WHERE uid = #{uid};
    </select>

    <insert id="insert">
        INSERT INTO plan
        VALUES (
        #{id.id},
        #{uid.id},
        #{title},
        #{description},
        #{thumbnailUrl},
        #{startDate},
        #{endDate},
        #{createdAt},
        #{updatedAt},
        #{isDeleted}
        )
    </insert>

    <update id="update">
        UPDATE plan
        <set>
            <if test="plan.title != null">title = #{plan.title},</if>
            <if test="plan.description != null">description = #{plan.description},</if>
            <if test="plan.startDate != null">start_date = #{plan.startDate},</if>
            <if test="plan.endDate != null">end_date = #{plan.endDate},</if>
        </set>
        WHERE uid = #{uid}
    </update>

    <delete id="delete">
        DELETE FROM plan
        WHERE plan_id = #{id}
    </delete>
</mapper>
